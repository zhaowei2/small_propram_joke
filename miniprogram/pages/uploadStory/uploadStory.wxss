/* miniprogram/pages/uploadStory/uploadStory.wxss *//* miniprogram/pages/myStory/myStory.wxss */
.tabs{
  display: flex;
  height: 60rpx;
}
.tabs .tab{
  flex: 1;
  height: 60rpx;
}
.tabs .tab .nav{
  text-align: center;
  line-height: 60rpx;
  font-size: 30rpx;
}
.active-tab{
  padding:0 4rpx 4rpx;
  border-bottom: 2rpx solid red;
}


.area{
  padding:25rpx;
}
.text-area{
  border:1px solid #ccc;
  padding:20rpx;
  font-size: 30rpx;
  width: 100%;
}
.user{
  display: flex;
}
.user-name{
  line-height: 120rpx;
}
.userinfo-avatar{
  width:100rpx;
  height:100rpx;
  margin:20rpx;
  border-radius:50%;
  background-size:cover;
  background-color:white;
}
.uploader-text{
  width: 100rpx;
  height: 100rpx;
  margin: 0 auto;
  border:1rpx solid #ccc;
  border-radius: 10rpx;
  text-align: center;
  line-height: 80rpx;

}
.uploader-text text{
  font-size: 100rpx;
  color:#ccc;
}
.picker-select{
  display: flex;
}
.title{
  float: left;
}
.picker{
  float: left;
  border: 1px solid #ccc;
  padding:0 50rpx;
}